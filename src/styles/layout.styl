section

  .sidebar, .content-wrapper
    display inline-block
    vertical-align top

  .sidebar
    width 128px
    padding-right 16px
    margin-right 15px
    border-right 1px solid #eee

    min-height 512px

    h3
      margin-top 32px
      margin-bottom 8px

      &:first-child
        margin-top 0

    ul a
      display block
      margin-bottom 4px
      font-size 18px

      &:hover, &.active
        padding-left 8px
        margin-left -9px
        border-left 1px solid #999

  .content-wrapper
    width 75%

    header
      position relative

      *
        display inline-block
        vertical-align top

      .controls
        padding-top 8px
        position absolute
        right 0

        i
          margin-right 16px
          color #aaa

          &:hover, &.active
            color #666
            cursor pointer
