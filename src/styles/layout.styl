header.main
  margin-bottom 32px

section
  .sidebar, .content-wrapper
    display inline-block
    vertical-align top

  .sidebar
    width 128px
    padding-right 16px
    margin-right 15px
    border-right 1px solid #eee

    min-height 512px

    h3
      margin-top 32px
      margin-bottom 8px

      &:first-child
        margin-top 0

    ul a
      display block
      margin-bottom 8px
      font-size 20px

      &:hover, &.active
        padding-left 8px
        margin-left -9px
        border-left 1px solid #999

  .content-wrapper
    width 75%

    header
      position relative
      margin-bottom 32px

      *
        display inline-block
        vertical-align top

      .right
        position absolute
        top 0
        right 0

      img
        border 2px solid #ccc

      .subtitle
        margin-left 16px
        vertical-align bottom
        margin-bottom 6px
