.tweet
  display block
  padding 16px 64px
  margin-bottom 16px

  border-top 1px solid #eee

  p
    font-size 24px
    line-height 1.5

    a
      text-decoration underline

  .tags
    display block
    margin-top 16px
    color #aaa
    font-size 18px

    li
      display inline-block
      vertical-align top
      margin-left 16px

      &:first-child
        margin-left 0
